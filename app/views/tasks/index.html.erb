<div class="index-body">
<h1>Your tasks:</h1>

<ul class="tasks-list">
  <% @tasks.each do |task| %>
    <li><h3><% if task.completed %>
      <i class="far fa-check-square"></i>&ensp;&ensp;<%=link_to task.title, task_path(task.id)%>
      <% else %>
      <i class="far fa-square"></i>&ensp;&ensp;<%=link_to task.title, task_path(task.id)%>
      <% end %></h3></li>
  <% end %>
</ul>
</div>
<div id="add-task"><i class="fas fa-plus-square"></i> <%= link_to "Add a new task", new_path %></div>

